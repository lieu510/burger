<h1>Burgers!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
	      {{burger_name}}

        <button class="devour" data-id="{{id}}">Devour it!</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Order!</button>
</form>
